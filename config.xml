<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id		   = "com.audero.free.utility.whereiparkedmycar"
        version 	= "1.0.0">

   <name>LifeSaver</name>

   <description>The app alows us to send an emergency geo location beacon to a list of people so as to alert group of relatives and the nearest emergency response center this allows us to create a system which can be a potential lifesaver.</description>

   <author href="http://www.google.com" email="abhishekayyagari@gmail.com">Abhishek Ayyagari</author>

   <icon src="icon.png" gap:role="default" />

   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/geolocation"/>

   <preference name="phonegap-version" value="2.0.0" />
   <preference name="target-device" value="universal" />

   <!-- Splash Screens -->
   <gap:splash src="splash.png" />
   <gap:splash src="images/splash-160x220.png" gap:platform="android" gap:density="ldpi" />
   <gap:splash src="images/splash-220x330.png" gap:platform="android" gap:density="mdpi" />
   <gap:splash src="images/splash-450x650.png" gap:platform="android" gap:density="hdpi" />
</widget>
